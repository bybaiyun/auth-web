<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StudentMapper">

    <resultMap id="BaseResultMap" type="com.example.domain.Student">
            <result property="sid" column="sid" jdbcType="VARCHAR"/>
            <result property="sName" column="sname" jdbcType="VARCHAR"/>
            <result property="sAge" column="sage" jdbcType="TIMESTAMP"/>
            <result property="sSex" column="ssex" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        sid,sname,sage,
        ssex
    </sql>

    <insert id="insertSelective">
        INSERT INTO student (sid, sname, sage, ssex) VALUES
        (#{item.sid}, #{item.sName}, #{item.sAge}, #{item.sSex})
    </insert>

    <update id="updateByPrimaryKey" parameterType="com.example.domain.Student">
        update student t
        <set>
            <if test="sName != null">
                t.sname = #{sName,jdbcType=VARCHAR},
            </if>
            <if test="sSex != null">
                t.ssex = #{sSex,jdbcType=VARCHAR},
            </if>
            <if test="sAge != null">
                t.sage = #{sAge,jdbcType=TIMESTAMP},
            </if>
        </set>
        where t.sid = #{sid,jdbcType=VARCHAR}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from student where id = #{id}
    </delete>

    <select id="selectByPrimaryKey" resultType="com.example.domain.Student">
        select <include refid="Base_Column_List"/>
        from student
        where sid = #{sid}
    </select>

    <select id="selectAllStudent" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from student
        where 1 = 1
    </select>
</mapper>
